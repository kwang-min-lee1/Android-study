<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
<!-- XML 로 이미지 리소스 만들기
    shape: 모양의 속성을 지정, 사각형, 원, 선 등
    size: 모양의 크기
    corners: 둥근 모서리 (사각형에만 사용)
    gradient : 그라데이션 지정
-->
    <size
        android:width="200dp"
        android:height="100dp"
        ></size>
    <corners
        android:radius="30dp"
        />
    <gradient
        android:startColor="#F00"
        android:endColor="#FF0"
        android:angle="45"
        />

</shape>