<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- 스타일 리소스 정의
    뷰에 적용되는 스타일이 중복되서 사용할 경우, 스타일로 정의해서 사용
-->
    <style name="MyTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

<!-- 스타일 상속
    parent 속성의 스타일 아이템을 모두 가지고
    같은 아이템은 덮어쓰기, 다른 아이템은 추가
-->
    <style name="MyTextStyle2" parent="MyTextStyle">
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:background">@color/text_bg_color</item>
    </style>


</resources>