<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/introimageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/introimage" />

    <TextView
        android:id="@+id/introView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intro_main"
        android:fontFamily="@font/poetsenone"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@id/introimageView"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/introView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/intro_detail"
        android:layout_below="@id/introView1"/>

    <Button
        android:id="@+id/introView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/intro_delay"/>

    <Button
        android:id="@+id/introView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/introView3"
        android:text="@string/intro_button"/>








</RelativeLayout>